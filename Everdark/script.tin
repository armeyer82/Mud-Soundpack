#MACRO {\e1}
{
	#system say -v samantha -r 265 "$HP"
}

#MACRO {\e2}
{
	#system say -v samantha -r 265 "$SP"
}

#MACRO {\eOQ}
{
	bl;
	bc;
	bc
}

#VARIABLE         {HP}  {274}
#VARIABLE         {MHP}  {330}
#VARIABLE         {MSP}  {226}
#VARIABLE         {SP}  {210}

#CLASS {Everdark} CLOSE
